<h3 class="ui header">{{t "forms.i-i-s-probadesyat-докум-поставки-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-probadesyat-докум-поставки-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-probadesyat-докум-поставки-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерДогов
      class=(if (v-get validationModel "номерДогов" "isInvalid") "error")
      label=(t "forms.i-i-s-probadesyat-докум-поставки-e.номерДогов-caption")
      data-test-i-i-s-probadesyat-докум-поставки-e-номерДогов=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерДогов" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-probadesyat-докум-поставки-e.организация-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.организация
      displayAttributeName="наимОрганиз"
      autocomplete=true
      relationName="организация"
      projection="ОрганизацияL"
      title=(t "forms.i-i-s-probadesyat-докум-поставки-e.организация-caption")
      readonly=readonly
      componentName="организацияLookup"
      class=(if (v-get validationModel "организация" "isInvalid") "error")
      data-test-i-i-s-probadesyat-докум-поставки-e-организация=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "организация" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-probadesyat-докум-поставки-e.клиенты-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиенты
      displayAttributeName="наимЗаказчика"
      autocomplete=true
      relationName="клиенты"
      projection="КлиентыL"
      title=(t "forms.i-i-s-probadesyat-докум-поставки-e.клиенты-caption")
      readonly=readonly
      componentName="клиентыLookup"
      class=(if (v-get validationModel "клиенты" "isInvalid") "error")
      data-test-i-i-s-probadesyat-докум-поставки-e-клиенты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиенты" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-probadesyat-докум-поставки-e.инфОЗаказе-caption"}}</label>
    {{flexberry-groupedit
      componentName="инфОЗаказеGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.инфОЗаказе
      content=model.инфОЗаказе
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "инфОЗаказе" "isInvalid") "error")
      data-test-i-i-s-probadesyat-докум-поставки-e-инфОЗаказе=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "инфОЗаказе" "message")}}
  </div>
</form>
